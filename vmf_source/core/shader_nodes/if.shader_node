code = """
	output_a_type result;
	
	#if defined(OP_EQUAL)
		result = (input_a == input_b) ? output_a : output_b;
	#elif defined(OP_NOTEQUAL)
		result = (input_a != input_b) ? output_a : output_b;
	#elif defined(OP_SMALLER)
